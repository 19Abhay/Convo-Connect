<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="10sp"
        android:background="#bbffbb"
        android:layout_gravity="right"
        android:maxWidth="300sp"
        android:fitsSystemWindows="true"
        android:layout_margin="10sp"
        android:elevation="3sp"
        android:minWidth="100sp"
        android:orientation="vertical"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello My Freinds"
        android:maxWidth="200sp"
        android:id="@+id/text_sendermsg"
        android:layout_alignParentTop="true"
        >
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5:30"
        android:layout_gravity="right"
        android:textColor="@color/grey"
        android:textSize="10sp"
        android:id="@+id/text_msgtime"
        android:layout_alignRight="@+id/text_sendermsg"
        android:layout_below="@id/text_sendermsg"
        >
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2024-09-23"
        android:textColor="@color/grey"
        android:textSize="9sp"
        android:layout_gravity="right"
        android:id="@+id/text_sendermsgdate"
        android:layout_alignRight="@+id/text_sendermsg"
        android:layout_below="@id/text_msgtime"
        >
    </TextView>

    </LinearLayout>
</RelativeLayout>