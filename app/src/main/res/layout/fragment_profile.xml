<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/baseline_person_24"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp"
                android:layout_gravity="center"
                android:layout_marginTop="30sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Abhay Shukla"
                android:id="@+id/plain_profile_name"
                android:textColor="@color/purple2"
                android:gravity="center"
                android:padding="3sp"
                android:textSize="18sp"
                android:layout_marginTop="5sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="shuklaabhaystp@gmail.com"
                android:id="@+id/plain_profile_email"
                android:textColor="@color/purple"
                android:gravity="center"
                android:padding="3sp"
                android:textSize="18sp"
                android:layout_marginTop="2sp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Profile"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:backgroundTint="@color/purple3"
                >
            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="60sp"
                android:layout_marginTop="10sp"
                android:padding="5sp"
                android:layout_marginRight="10sp"
                android:layout_marginLeft="10sp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="60sp"
                    android:orientation="horizontal"
                    android:weightSum="6"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Do not Disturb.I'm working."
                        android:layout_gravity="center"
                        android:id="@+id/text_profileabout"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="15sp"
                        android:fontFamily="cursive"
                        android:layout_weight="5"
                        >
                    </TextView>

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:src="@drawable/baseline_edit_note_24"
                        android:id="@+id/img_profilechangeabout"
                        ></ImageView>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                app:endIconMode="clear_text"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Abhay"
                    android:id="@+id/text_profile_name"
                    >
                </com.google.android.material.textfield.TextInputEditText>


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mobile No."
                app:endIconMode="clear_text"
                android:layout_marginTop="10sp"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="933398198"
                    android:inputType="number"
                    android:id="@+id/text_profile_mobno"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    >
                </com.google.android.material.textfield.TextInputEditText>


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                app:endIconMode="password_toggle"
                android:layout_marginTop="10sp"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Anay"
                    android:inputType="textPassword"
                    android:id="@+id/text_profile_password"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    >
                </com.google.android.material.textfield.TextInputEditText>


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                app:endIconMode="clear_text"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="gmail.com"
                    android:id="@+id/text_profile_email"
                    >
                </com.google.android.material.textfield.TextInputEditText>


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update Profile"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:id="@+id/btn_updateprofile"
                android:backgroundTint="@color/purple3"
                >
            </com.google.android.material.button.MaterialButton>




        </LinearLayout>
    </ScrollView>




</LinearLayout>