<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Story"
    android:orientation="vertical"
    android:padding="10sp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stories"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="cursive"
        >
    </TextView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/baseline_insert_link_24"
            android:id="@+id/img_mystory_icon"
            >

        </de.hdodenhof.circleimageview.CircleImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_mystory_icon"
            android:layout_marginLeft="10sp"
            android:id="@+id/text_mystatus">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap to add your story"
            android:layout_toRightOf="@+id/img_mystory_icon"
            android:layout_below="@+id/text_mystatus"
            android:textSize="10sp"
            android:textColor="#6f7071"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="5sp"
            >
        </TextView>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recent Updates"
        android:textSize="14sp"
        android:layout_marginTop="5sp"
        android:textColor="@color/black"
        android:fontFamily="cursive"
        >
    </TextView>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15sp"
        android:id="@+id/recycler_userstory">
    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>